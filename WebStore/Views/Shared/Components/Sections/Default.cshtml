@model IEnumerable<WebStore.ViewModels.SectionViewModel>           

 <!-- CATEGORY-MENU-LIST START -->
<div class="left-category-menu hidden-sm hidden-xs">
    <div class="left-product-cat">
        <div class="category-heading">
            <h2>categories</h2>
        </div>
        
        
        <div class="category-menu-list">

            @foreach (var parent_section in Model)
            {
                if (parent_section.ChildSections.Count > 0)
                {
                    <div class="arrow-plus">
                        <a asp-controller="Home" asp-action="Shop">@parent_section.Name</a>
                        <!--  MEGA MENU START -->
                        <div class="cat-left-drop-menu">
                            <div class="cat-left-drop-menu-left">
                                <ul>
                                    @foreach (var child_section in parent_section.ChildSections)
                                    {
                                        <li>
                                            <a href="#">
                                                @child_section.Name
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <!-- MEGA MENU END -->
                    </div>
                }
                else
                {
                    <ul>
                         <!-- Single menu start -->
                         <li>
                             <a asp-controller="Home" asp-action="Shop">@parent_section.Name</a>
                         </li>
                    </ul>
                }
            }
        </div>
    </div>
</div>
<!-- END CATEGORY-MENU-LIST -->