                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <td class="text-center">Image</td>
                                            <td class="text-left">Product Name</td>
                                            <td class="text-left">Model</td>
                                            <td class="text-left">Quantity</td>
                                            <td class="text-right">Unit Price</td>
                                            <td class="text-right">Total</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var (product, quantity) in Model.Cart.Items)
                                    {
                                        <tr>
                                            <td class="text-center">
                                                <a href="#"><img class="img-thumbnail" src="~/img/product/@product.ImageUrl" alt="#" /></a>
                                            </td>
                                            <td class="text-left">
                                                <a href="#">@product.Name</a>
                                            </td>
                                            <td class="text-left"></td>
                                            <td class="text-left">
                                                <a class="btn btn-default cart-quantity_up" asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id" data-id="@product.Id">
                                                    +
                                                </a>
                                                <a class="btn btn-default cart-quantity_down" asp-controller="Cart" asp-action="Decrement" asp-route-id="@product.Id" data-id="@product.Id">
                                                    -
                                                </a>
                                            </td>
                                            <td class="text-right" data-price="@product.Price">@product.Price.ToString("C")</td>
                                            <td class="text-right">@Model.Cart.TotalPrice.ToString("C")</td>
                                        </tr>

                                    }
                                    </tbody>
                                </table>
                            </div>
