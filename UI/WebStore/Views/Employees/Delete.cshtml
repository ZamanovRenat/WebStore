@model WebStore.Domain.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = $"Удаление сотрудника {Model.LastName} {Model.FirstName}";
}



<div class="container">
    <h2>@ViewData["Title"]</h2>
    <h3>Вы действительно хотите @ViewData["Title"]?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Patronymic)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Patronymic)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Age)
            </dd>
        </dl>

        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            <hr />

        </form>
        <a asp-action="Index">Назад к списку</a>
    </div>
</div>
