@model WebStore.Domain.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<!-- START PAGE-CONTENT -->
<section class="page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <!-- CATEGORY-MENU-LIST START -->
                <vc:sections />
                <vc:brands />
                <!-- END CATEGORY-MENU-LIST -->
            </div>
            <div class="col-md-9">
                <!-- Start checkout-area -->
                <div class="checkout-area">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="cart-title">
                                <h2 class="entry-title">Login</h2>
                            </div>
                            <!-- Accordion start -->
                            <div class="panel-group" id="accordion">
                                <!-- Start 1 Checkout-options -->
                                <div class="panel panel_default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a class="accordion-trigger" data-toggle="collapse" data-parent="#accordion" href="#checkout-options">Step 1: Checkout Options  <i class="fa fa-caret-down"></i> </a>
                                        </h4>
                                    </div>
                                    <div id="checkout-options" class="collapse in">
                                        <div class="panel-body">
                                            <div class="row">
                                                <div class="col-md-6 col-xs-12">
                                                    <div class="checkout-collapse">
                                                        <h3 class="title-group-3 gfont-1">New Customer</h3>
                                                        <a asp-action="Register">Регистрация</a>

                                                        <p>By creating an account you will be able to shop faster, be up to date on an order's status, and keep track of the orders you have previously made.</p>
                                                        <input type="submit" class="btn btn-primary" value="Continue" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-xs-12">
                                                    <div class="checkout-collapse">
                                                        <h3 class="title-group-3 gfont-1">Returning Customer</h3>
                                                        <p>I am a returning customer</p>
                                                        <form asp-action="Login" asp-antiforgery="true" asp-route-ReturnUrl="@Model.ReturnUrl">

                                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                                            <div class="form-group">
                                                                <label>Имя пользователя</label>
                                                                <input asp-for="UserName" placeholder="Логин" />
                                                                <span asp-validation-for="UserName"></span>
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Password</label>
                                                                <input asp-for="Password" placeholder="Пароль" />
                                                                <span asp-validation-for="Password"></span>


                                                            </div>
                                                            <span><input asp-for="RememberMe" class="checkbox" /></span>
                                                            <button type="submit" class="btn btn-default">Login</button>

                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End Checkout-options -->
                            </div>
                            <!-- Accordion end -->
                        </div>
                    </div>
                </div>
                <!-- End Shopping-Cart -->
            </div>
        </div>
    </div>
    <partial name="Partial/_BrandLogo" />

    <partial name="Partial/_SubscribeArea" />
</section>
<!-- END PAGE-CONTENT -->
